<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

<!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>

        <!-- An example global constant
        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^\d{5}\d*$</constant-value>
        </constant>
        end example-->

    </global>

    <!-- An example formset for another locale -->
    <formset language="fr">

        <constant>
            <constant-name>postalCode</constant-name>
            <constant-value>^[0-9a-zA-Z]*$</constant-value>
        </constant>

        <!-- An example form -->
        <form name="ClienteForm">
            <field
                property="nome"
                depends="required,mask">
                    <arg key="cliente.nome"/>
                    <!-- configurado no 'MessageResources.properties' -->
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[a-zA-Z]*$</var-value>
                        <!-- * = qualquer quantidade, 1 está bom. -->
                    </var>
            </field>
            <field
                property="email"
                depends="required,mask">
                    <arg key="cliente.email"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^.+@.+\.[a-z]+$</var-value>
                        <!-- + = repetição. -->
                        <!-- o \ indica que o proximo campo deve ser obrigatório. -->
                        <!-- o . indica que póderá ser utilizado qualquer caracter. numero e ponto. -->
                    </var>
            </field>
            <field
                property="datanasc"
                depends="required,mask">
                    <arg key="cliente.datanasc"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9]{2,2}\/[0-9]{2,2}\/[0-9]{4,4}$</var-value>
                    </var>
            </field>
        </form>

   </formset>

</form-validation>
