<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>WebAula01</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<!-- Mapeando a Classe Servlet -->

	<servlet>
		<servlet-name>Controle</servlet-name>
		<servlet-class>control.Controle</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Controle</servlet-name>
		<url-pattern>/Controle</url-pattern>
	</servlet-mapping>
	<!-- é obrigatório colocar a "/" nessa segunda linha -->



</web-app>